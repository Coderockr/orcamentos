{% extends "layout.twig" %}
{% block content %}
    <div class="row">
        <div class="col-md-9">
            <h3>Projeto {{ project.name }}</h4>
        </div>
        <div class="col-md-3">
        </div>
    </div>
    <div class="row form">
        <div class="col-md-6">
            <div>
                <label for="client">Cliente</label><br>
                <p>{{ project and project.client ? project.client.name : "" }}</p>
            </div>
            <div>
                <label for="tags">Tags</label>
                <p>{{ project and project.tags ? project.tags : "" }}</p>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <label for="description">Descrição</label>
                <p>{{ project and project.description ? project.description : "" }}</p>
            </div> 
        </div>
    </div>
    <div class="row cards margin20">
        <div class="col-md-12">
            <a href="/quote/new/{{ project.id }}" class="btn btn-primary pull-right " title="Cadastre um novo orçamento">Novo Orçamento</a>
            <h4>Orcamentos</h4>
        </div>
        {% if project.quoteCollection | length > 0 %}
            {% for quote in project.quoteCollection %}
               <div class="col-md-4">
                    <a data-href="/quote/delete/{{ quote.id }}" data-toggle="confirmation" class="glyphicon glyphicon-remove margin20 edit" title="Apagar orçamento"></a>
                    <a href="/quote/detail/{{quote.id}}" class="thumbnail" title="Visualizar projetos e orçamentos">
                        <span class="caption">
                            <h5>{{ quote.version }}</h5>
                            <p>
                                <time datetime="2013-11-09T13:40">{{ quote.created }}</time><br />
                            </p>
                        </span>
                    </a>
                    <a href="/quote/edit/{{ quote.id }}" title="Editar orçamento" class="edit"><i class="glyphicon glyphicon-pencil"></i>editar</a>

                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
